{
  "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
  "formatter": {
    "enabled": false
  },
  "linter": {
    "enabled": true,
    "rules": {
      "security": {
        "noDangerouslySetInnerHtml": "warn"
      },
      "suspicious": {
        "noExplicitAny": "warn",
        "noArrayIndexKey": "warn"
      },
      "style": {
        "noNonNullAssertion": "warn"
      }
    },
    "includes": ["**/*.{js,jsx,ts,tsx,json,css,scss,md,mdx}"]
  },
  "assist": {
    "enabled": true,
    "actions": {
      "recommended": true
    }
  }
}
