---
import { Image } from "astro:assets";
import claim from "@/assets/claim.png";
import earn from "@/assets/earn.png";
import share from "@/assets/share.png";
import { Separator } from "@/components/ui/Separator";
import { Typography } from "@/components/ui/Typography";
import { Heart, KeyVariant, StarShooting } from "@/icons";
import FeatureCard from "./FeatureCard.astro";
---

<section
  class="bg-background z-20 rounded-t-[6%] bg-gradient-to-b from-white/10 to-50% py-24 shadow-[0_-2px_0_-1px] shadow-white/20 backdrop-blur-lg lg:-mt-8"
>
  <div class="container">
    <header class="mb-12 grid grid-cols-[1fr_auto_1fr] items-center gap-8">
      <Separator />
      <Typography variant="display" size="md">
        How It <span class="text-primary">Works</span>
      </Typography>
      <Separator />
    </header>

    <div class="grid grid-cols-3 gap-6 max-lg:grid-cols-1">
      <FeatureCard
        title="Claim"
        description="Get the best tables in town without the weeks of planning."
      >
        <KeyVariant slot="icon" />
        <Image
          src={claim}
          layout="full-width"
          slot="image"
          class="object-bottom! max-lg:object-top!"
          alt="Claim"
        />
      </FeatureCard>
      <FeatureCard
        title="Share"
        description="Can't make your reservation? Share it and make someone's day."
      >
        <Heart slot="icon" />
        <Image
          src={share}
          class="object-top-right"
          layout="full-width"
          slot="image"
          alt="Share"
        />
      </FeatureCard>
      <FeatureCard
        title="Earn"
        description="Earn tokens with every booking and redeem them for exclusive rewards."
      >
        <StarShooting slot="icon" />
        <Image
          src={earn}
          class="object-[50%_70%] max-lg:object-[50%_20%]"
          layout="full-width"
          slot="image"
          alt="Earn"
        />
      </FeatureCard>
    </div>
  </div>
</section>
